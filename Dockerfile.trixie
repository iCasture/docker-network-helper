# 基于 Debian trixie 最新版构建 network-helper 镜像
FROM debian:trixie

# Update package list and install required tools:
# - bash
# - curl
# - ping (iputils-ping)
# - netstat (net-tools)
# - tcpdump
# - dig/nslookup (dnsutils)
# - procps
RUN apt-get update && apt-get install -y \
    bash \
    curl \
    iputils-ping \
    net-tools \
    tcpdump \
    dnsutils \
    procps && \
    rm -rf /var/lib/apt/lists/*

# Keep the container running
CMD ["tail", "-f", "/dev/null"]
